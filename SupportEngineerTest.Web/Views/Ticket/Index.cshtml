@model IEnumerable<SupportEngineerTest.Web.Models.Ticket>

@{
    ViewBag.Title = "Tickets";
}

<h2>Support Tickets</h2>

<p>
    @Html.ActionLink("Create New Ticket", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>User</th>
        <th>Status</th>
        <th>Priority</th>
        <th>Created</th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Id)</td>
        <td>@Html.DisplayFor(modelItem => item.Title)</td>
        <td>@Html.DisplayFor(modelItem => item.User.Email)</td>
        <td>@Html.DisplayFor(modelItem => item.Status)</td>
        <td>@Html.DisplayFor(modelItem => item.Priority)</td>
        <td>@Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.CreatedDate))</td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-info" })
        </td>
    </tr>
}

</table>
